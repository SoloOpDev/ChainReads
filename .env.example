# Points Claim Contract Address (alternative env var name)
POINTS_CLAIM_CONTRACT=

# Admin Secret (for granting points via /api/admin/grant-points)
# CRITICAL: Change this in production! Used to authorize admin operations
ADMIN_SECRET=change-me-in-production
